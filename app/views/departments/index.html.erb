<p id="notice"><%= notice %></p>

<h1>Listing Departments</h1>
<div id="main">
<div id="right_part1"><%= link_to 'New Department', new_department_path %></div>
<div id="left_part1"><%= link_to 'List Employees', employees_path %></div>
</div>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Department name</th>
      <th colspan="3">CRUD Options</th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.id %></td>
        <td><%= department.department_name %></td>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


